<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp">

    <RelativeLayout
        android:id="@+id/jpContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtJpWord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/word"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/jp_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/txtJpWord"
            android:layout_below="@id/txtJpWord"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/txtReading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@id/txtJpWord"
            android:gravity="end"
            android:text="@string/reading"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/jp_reading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtReading"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/jp_word"
            android:gravity="end"
            android:maxLines="3" />
    </RelativeLayout>

    <TextView
        android:id="@+id/txtEnDef"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/jpContainer"
        android:layout_marginTop="10dp"
        android:text="@string/translation"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/en_def"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/txtEnDef"
        android:layout_below="@id/txtEnDef"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:maxLines="3" />


</RelativeLayout>